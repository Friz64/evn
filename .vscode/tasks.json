{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "compile shaders",
            "command": "./compile_shaders.sh",
        },
        {
            "type": "shell",
            "label": "pack game",
            "command": "./pack_game.sh -l -w",
        },
        {
            "type": "shell",
            "label": "run debug",
            "command": "cargo run -p evn -- --dev"
        },
        {
            "type": "shell",
            "label": "run release",
            "command": "cargo run -p evn --release -- --dev"
        },
        {
            "type": "shell",
            "label": "check windows",
            "command": "cargo check --target x86_64-pc-windows-gnu"
        }
    ]
}